<footer aria-labelledby="footer-heading" class="my-16">
  <h2 id="footer-heading" class="sr-only">
    Footer
  </h2>
  <div class="mx-auto max-w-screen-md px-6 py-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8">
        <h3 class="text-md font-bold text-center md:text-left">Cari Tadika</h3>
        <p class="text-sm text-center md:text-left leading-6 text-gray-600">
          Caritadika.my adalah sistem carian sumber terbuka yang membantu anda
          mencari tadika, taska, dan pusat jagaan kanak-kanak berdekatan di
          seluruh Malaysia.
        </p>
        <div class="flex space-x-6">
          <% navigation_data[:social].each do |item| %>
            <a
              href="<%= item[:href] %>"
              target="_blank"
              class="text-gray-400 hover:text-gray-500"
            >
              <span class="sr-only"><%= item[:name] %></span>
            </a>
          <% end %>
        </div>
      </div>
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div class="">
            <h3 class="text-sm font-semibold leading-6 text-gray-900">
              Rujukan
            </h3>
            <ul role="list" class="mt-6 space-y-4">
              <% navigation_data[:resources].each do |item| %>
                <li>
                  <a
                    href="<%= item[:href] %>"
                    target="_blank"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    <%= item[:name] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold leading-6 text-gray-900 mt-10 md:mt-0">
              Lawati Juga
            </h3>
            <ul role="list" class="mt-6 space-y-4">
              <% navigation_data[:partners].each do |item| %>
                <li>
                  <a
                    href="<%= item[:href] %>?ref=caritadika.my"
                    target="_blank"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    <%= item[:name] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold leading-6 text-gray-900">
              Projek Lain
            </h3>
            <ul role="list" class="mt-6 space-y-4">
              <% navigation_data[:projects].each do |item| %>
                <li>
                  <a
                    href="<%= item[:href] %>?ref=caritadika.my"
                    target="_blank"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    <%= item[:name] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div
      class="
        mt-16 flex flex-col md:flex-row gap-4 items-center justify-between border-t
        border-gray-900/10 pt-8 sm:mt-20
      "
    >
      <p class="text-xs leading-5 text-gray-500">
        &copy;
        <%= Time.now.year %>
        Hak Cipta Terpelihara
      </p>
      <a
        href="https://zafranudin.dev"
        target="_blank"
        class="text-xs leading-5 text-gray-500 hover:underline text-blue-400"
      >
        Dibina oleh Zafranudin Zafrin
      </a>
    </div>
  </div>
</footer>
